[Unit]
Description=TLP suspend/resume
Before=sleep.target
StopWhenUnneeded=yes
Documentation=https://linrunner.de/tlp

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@TLP_SBIN@/tlp suspend
ExecStop=@TLP_SBIN@/tlp resume

[Install]
WantedBy=sleep.target
